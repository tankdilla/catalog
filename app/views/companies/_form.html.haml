= bootstrap_form_for @company, layout: :horizontal, label_col: "col-md-4", control_col: "col-md-4" do |f|
  - if @company.errors.any?
    #error_explanation
      %h2= "#{pluralize(@company.errors.count, "error")} prohibited this company from being saved:"
      %ul
        - @company.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :name
  .actions
    = f.submit 'Save'
