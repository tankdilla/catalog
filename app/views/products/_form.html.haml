= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :company_id
    = f.number_field :company_id
  .field
    = f.label :quality_rating
    = f.number_field :quality_rating
  .field
    = f.label :item_type_id
    = f.number_field :item_type_id
  .actions
    = f.submit 'Save'
