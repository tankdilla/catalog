= form_for @product_entry do |f|
  - if @product_entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product_entry.errors.count, "error")} prohibited this product_entry from being saved:"
      %ul
        - @product_entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :product_id
    = f.number_field :product_id
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :source
    = f.text_field :source
  .field
    = f.label :source_url
    = f.text_field :source_url
  .actions
    = f.submit 'Save'
