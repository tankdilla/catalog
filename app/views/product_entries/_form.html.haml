= bootstrap_form_for [@product, @product_entry], url: product_entries_path(@product), layout: :horizontal, label_col: "col-md-4", control_col: "col-md-4" do |f|
  - if @product_entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product_entry.errors.count, "error")} prohibited this product_entry from being saved:"
      %ul
        - @product_entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :price
  .field
    = f.text_field :source
  .field
    = f.text_field :source_url
  .actions
    = f.submit 'Save'
